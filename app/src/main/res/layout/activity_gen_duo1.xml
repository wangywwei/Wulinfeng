<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.hxwl.wlf3.home.remenhot.GenDuo1Activity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/wlf_44dp"
        android:background="@color/rgb_BB2B2D">

        <ImageView
            android:id="@+id/gengduo_fanhui"
            android:layout_width="@dimen/wlf_11dp"
            android:layout_height="@dimen/wlf_18dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/wlf_16dp"
            android:src="@drawable/fanhui" />

        <LinearLayout
            android:layout_width="@dimen/wlf_148dp"
            android:layout_height="@dimen/wlf_28dp"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:background="@drawable/corners_bg"
            android:padding="@dimen/wlf_1dp">

            <TextView
                android:id="@+id/gengduo_processing"
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="进行中"
                android:gravity="center"
                android:textSize="@dimen/text_14sp"
                android:textColor="#C52720"
               />

            <TextView
                android:id="@+id/gengduo_end"
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="已结束"
                android:gravity="center"
                android:textSize="@dimen/text_14sp"
                android:background="@drawable/coxrners_bg2"/>

        </LinearLayout>

    </RelativeLayout>




    <com.jcodecraeer.xrecyclerview.XRecyclerView
        android:id="@+id/gengduo_xrecycler1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

    <com.jcodecraeer.xrecyclerview.XRecyclerView
        android:visibility="gone"
        android:id="@+id/gengduo_xrecycler2"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>




</LinearLayout>
