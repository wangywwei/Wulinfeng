<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="150dp"
    android:background="@color/white"
    android:orientation="vertical">

            <TextView
                android:layout_marginLeft="@dimen/wlf_16dp"
                android:layout_marginTop="@dimen/wlf_16dp"
                android:id="@+id/changci"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="[第六场]"
                android:textColor="#a0a0a0"
                android:textSize="12sp" />
            <TextView
                android:layout_marginTop="@dimen/wlf_16dp"
                android:id="@+id/tv_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_toRightOf="@+id/changci"
                android:text=" -- "
                android:textColor="@color/black"
                android:textSize="12sp" />


        <LinearLayout
            android:layout_marginTop="@dimen/wlf_16dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/changci"
            android:orientation="horizontal">

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="106dp"
                android:layout_marginRight="10dp"
                android:layout_gravity="center_horizontal"
                >

                <ImageView
                    android:id="@+id/iv_player_icon_left"
                    android:layout_width="55dp"
                    android:layout_height="55dp"
                    android:layout_centerHorizontal="true"
                    android:background="@drawable/touxiang_img"
                    android:scaleType="centerCrop" />

                <LinearLayout
                    android:layout_marginBottom="@dimen/wlf_20dp"
                    android:id="@+id/ll_1"
                    android:layout_width="70dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_marginTop="15dp"
                    android:layout_centerHorizontal="true"
                    android:gravity="center_horizontal"
                    android:orientation="horizontal">

                    <ImageView
                        android:visibility="gone"
                        android:id="@+id/iv_country_left"
                        android:layout_width="18dp"
                        android:layout_height="12dp"
                        />

                    <TextView
                        android:id="@+id/playerA_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:singleLine="true"
                        android:text="王洪祥"
                        android:textColor="@color/black"
                        android:textSize="11dp" />
                </LinearLayout>
                <TextView
                    android:layout_marginBottom="2dp"
                    android:id="@+id/julebu1"
                    android:textColor="@color/rgb_888888"
                    android:textSize="@dimen/text_11sp"
                    android:text="顺远搏击搏击俱乐部"
                    android:layout_alignParentBottom="true"
                    android:layout_centerHorizontal="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <ImageView
                    android:id="@+id/iv_sheng_left"
                    android:layout_width="18dp"
                    android:layout_height="18dp"
                    android:layout_alignEnd="@+id/ll_1"
                    android:layout_alignParentTop="true"
                    android:layout_alignRight="@+id/ll_1"
                    android:visibility="gone" />

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="106dp"
                android:layout_marginLeft="10dp"
                android:layout_centerVertical="true"
                >

                <ImageView
                    android:id="@+id/iv_player_icon_right"
                    android:layout_width="55dp"
                    android:layout_height="55dp"
                    android:layout_centerHorizontal="true"
                    android:background="@drawable/touxiang_img"
                    android:scaleType="centerCrop" />

                <LinearLayout
                    android:layout_marginBottom="@dimen/wlf_20dp"
                    android:id="@+id/ll_2"
                    android:layout_width="70dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_marginTop="15dp"
                    android:layout_centerHorizontal="true"
                    android:orientation="horizontal"
                    android:gravity="center_horizontal"
                    >

                    <ImageView
                        android:visibility="gone"
                        android:id="@+id/iv_country_right"
                        android:layout_width="18dp"
                        android:layout_height="12dp" />

                    <TextView
                        android:id="@+id/tv_playerB_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:singleLine="true"
                        android:text="王洪祥"
                        android:textColor="@color/black"
                        android:textSize="11dp" />
                </LinearLayout>
                <TextView
                    android:layout_marginBottom="2dp"
                    android:id="@+id/julebu2"
                    android:textColor="@color/rgb_888888"
                    android:textSize="@dimen/text_11sp"
                    android:text="顺远搏击搏击俱乐部"
                    android:layout_alignParentBottom="true"
                    android:layout_centerHorizontal="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <ImageView
                    android:id="@+id/iv_sheng_right"
                    android:layout_width="18dp"
                    android:layout_height="18dp"
                    android:layout_alignEnd="@+id/ll_2"
                    android:layout_alignParentTop="true"
                    android:layout_alignRight="@+id/ll_2"
                    android:visibility="gone" />
            </RelativeLayout>
        </LinearLayout>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/vs"
            android:layout_centerInParent="true"
            />


</RelativeLayout>