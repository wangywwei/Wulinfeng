<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/llyt_toutiao_zhuanti"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical">
    <ImageView
        android:id="@+id/view_line"
        android:layout_width="match_parent"
        android:layout_height="11dp"
        android:background="@color/list_back"
        />
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        >
        <ImageView
            android:id="@+id/iv_verline"
            android:layout_width="@dimen/px_12"
            android:layout_height="@dimen/px_45"
            android:layout_centerVertical="true"
            android:layout_marginLeft="5dp"
            android:background="#EF180E"
            />
        <TextView
            android:id="@+id/tv_title_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:gravity="left"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:layout_marginLeft="5dp"
            android:layout_toRightOf="@+id/iv_verline"
            android:singleLine="true"
            android:textSize="@dimen/px_45"
            android:textColor="#191919" />
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:background="@color/list_back"
        />

    <RelativeLayout
        android:id="@+id/rl_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white">

        <RelativeLayout
            android:id="@+id/rl_layouttop"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white">

            <ImageView
                android:id="@+id/iv_big_img"
                android:layout_width="match_parent"
                android:layout_height="@dimen/image_h"
                android:layout_margin="5dp"
                android:scaleType="centerCrop"
                android:src="@drawable/wlf_deimg" />

            <RelativeLayout
                android:id="@+id/rl_video_flg"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_alignBottom="@+id/iv_big_img"
                android:layout_alignTop="@+id/iv_big_img"
                android:background="@color/transparent_fou">

                <ImageView
                    android:id="@+id/iv_video_flg"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:src="@drawable/video_icon" />
            </RelativeLayout>
        </RelativeLayout>

        <TextView
            android:id="@+id/tv_title1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/rl_layouttop"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:background="@color/white"
            android:singleLine="true"
            android:textSize="@dimen/px_42"
            android:text="69KG世界功夫王者世界功夫王者世界功夫王者世界功夫王者世界功夫王者世界功夫王者"
            android:textColor="#202020" />
    </RelativeLayout>


    <LinearLayout
        android:id="@+id/ll_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="horizontal">

        <RelativeLayout
            android:id="@+id/rl_layout1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <RelativeLayout
                android:id="@+id/rl_layout_left"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/iv_item_img"
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:layout_marginBottom="5dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="3dp"
                    android:layout_marginTop="5dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/wlf_deimg" />

                <RelativeLayout
                    android:id="@+id/rl_video_flg1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="3dp"
                    android:layout_marginLeft="5dp"
                    android:layout_alignBottom="@+id/iv_item_img"
                    android:layout_alignTop="@+id/iv_item_img"
                    android:background="@color/transparent_three">

                    <ImageView
                        android:id="@+id/iv_video_flg1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:src="@drawable/video_icon" />
                </RelativeLayout>
            </RelativeLayout>

            <TextView
                android:id="@+id/tv_title2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/rl_layout_left"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_marginTop="5dp"
                android:maxLines="2"
                android:textSize="@dimen/px_36"
                android:text="69KG世界功夫王者世界功夫王者世界功夫王者世界功夫王者世界功夫王者世界功夫王者"
                android:textColor="#585858" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_marginLeft="10dp"
                android:background="@color/white"
                android:layout_below="@+id/tv_title2"
                />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rl_layout2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <RelativeLayout
                android:id="@+id/rl_layout_right"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/iv_item_img2"
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:layout_marginBottom="5dp"
                    android:layout_marginLeft="3dp"
                    android:layout_marginRight="5dp"
                    android:layout_marginTop="5dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/wlf_deimg" />

                <RelativeLayout
                    android:id="@+id/rl_video_flg2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@+id/iv_item_img2"
                    android:layout_alignTop="@+id/iv_item_img2"
                    android:background="@color/transparent_three"
                    android:layout_marginLeft="3dp"
                    android:layout_marginRight="5dp"
                    >

                    <ImageView
                        android:id="@+id/iv_video_flg2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:src="@drawable/video_icon" />
                </RelativeLayout>
            </RelativeLayout>

            <TextView
                android:id="@+id/tv_title3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/rl_layout_right"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_marginTop="5dp"
                android:maxLines="2"
                android:textSize="@dimen/px_36"
                android:text="69KG世界功夫王者世界功夫王者世界功夫王者世界功夫王者世界功夫王者世界功夫王者"
                android:textColor="#585858" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_marginRight="10dp"
                android:background="@color/white"
                android:layout_below="@+id/tv_title3"
                />
        </RelativeLayout>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/ll_layout2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="horizontal">

        <RelativeLayout
            android:id="@+id/rl_layout3"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <RelativeLayout
                android:id="@+id/rl_layout_left2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/iv_item_img3"
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:layout_marginBottom="5dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="3dp"
                    android:layout_marginTop="5dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/wlf_deimg" />

                <RelativeLayout
                    android:id="@+id/rl_video_flg3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="3dp"
                    android:layout_marginLeft="5dp"
                    android:layout_alignBottom="@+id/iv_item_img3"
                    android:layout_alignTop="@+id/iv_item_img3"
                    android:background="@color/transparent_three">

                    <ImageView
                        android:id="@+id/iv_video_flg3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:src="@drawable/video_icon" />
                </RelativeLayout>
            </RelativeLayout>

            <TextView
                android:id="@+id/tv_title4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/rl_layout_left2"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="5dp"
                android:layout_marginTop="5dp"
                android:maxLines="2"
                android:textSize="@dimen/px_36"
                android:text="69KG世界功夫王者世界功夫王者世界功夫王者世界功夫王者世界功夫王者世界功夫王者"
                android:textColor="#585858" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rl_layout4"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <RelativeLayout
                android:id="@+id/rl_layout_right4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/iv_item_img4"
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:layout_marginBottom="5dp"
                    android:layout_marginLeft="3dp"
                    android:layout_marginRight="5dp"
                    android:layout_marginTop="5dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/wlf_deimg" />

                <RelativeLayout
                    android:id="@+id/rl_video_flg4"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@+id/iv_item_img4"
                    android:layout_alignTop="@+id/iv_item_img4"
                    android:background="@color/transparent_three"
                    android:layout_marginLeft="3dp"
                    android:layout_marginRight="5dp"
                    >

                    <ImageView
                        android:id="@+id/iv_video_flg4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:src="@drawable/video_icon" />
                </RelativeLayout>
            </RelativeLayout>

            <TextView
                android:id="@+id/tv_title5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/rl_layout_right4"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_marginTop="5dp"
                android:maxLines="2"
                android:textSize="@dimen/px_36"
                android:text="69KG世界功夫王者世界功夫王者世界功夫王者世界功夫王者世界功夫王者世界功夫王者"
                android:textColor="#585858" />
        </RelativeLayout>

    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:background="#EFEFEF" />
    <RelativeLayout
        android:id="@+id/rl_clickmore"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        >
        <TextView
            android:id="@+id/tv_click_more"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:layout_centerVertical="true"
            android:gravity="center"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:textSize="@dimen/px_36"
            android:text="查看更多"
            android:textColor="#f4534c" />
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/chakan"
            android:layout_marginLeft="@dimen/px_15"
            android:layout_toRightOf="@+id/tv_click_more"
            android:layout_centerVertical="true"
            />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#EFEFEF" />
    <ImageView
        android:id="@+id/view_line_bottom"
        android:layout_width="match_parent"
        android:layout_height="11dp"
        android:visibility="gone"
        android:background="@color/list_back"
        />
</LinearLayout>
