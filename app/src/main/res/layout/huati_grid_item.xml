<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:layout_margin="@dimen/wlf_2dp"
        android:scaleType="fitXY"
        android:id="@+id/huati_img"
        android:src="@drawable/wlf_deimg"
        android:layout_width="match_parent"
        android:layout_height="103dp" />
    <LinearLayout
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:layout_centerInParent="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/huati_title"
            android:textSize="@dimen/text_18sp"
            android:textColor="@color/white"
            android:text="#中加对抗赛#"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/huati_number"
            android:textColor="@color/rgb_FF6566"
            android:layout_marginTop="@dimen/wlf_10dp"
            android:text="1256次参与"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>


</RelativeLayout>