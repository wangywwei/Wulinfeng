<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_margin="@dimen/wlf_16dp"
        android:layout_width="match_parent"
        android:layout_height="@dimen/wlf_78dp">
        <RelativeLayout
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent">
            <TextView
                android:ellipsize="end"
                android:maxLines="2"
                android:id="@+id/information_content"
                android:textColor="@color/rgb_222222"
                android:text="王者归来！昔日散打王齐聚首再现散打新力量"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <TextView
                android:visibility="visible"
                android:id="@+id/information_title"
                android:textColor="@color/rgb_888888"
                android:textSize="@dimen/text_12sp"
                android:text="搏击周评"
                android:layout_alignParentBottom="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <LinearLayout
                android:layout_alignParentRight="true"
                android:layout_alignParentBottom="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_gravity="center_vertical"
                    android:visibility="visible"
                    android:id="@+id/information_look"
                    android:textColor="@color/rgb_888888"
                    android:textSize="@dimen/text_12sp"
                    android:text="5682看过"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <TextView
                    android:paddingRight="@dimen/wlf_6dp"
                    android:paddingLeft="@dimen/wlf_6dp"
                    android:gravity="center"
                    android:layout_marginLeft="@dimen/wlf_16dp"
                    android:background="@drawable/biaoqian1"
                    android:visibility="gone"
                    android:id="@+id/information_look2"
                    android:textColor="@color/white"
                    android:textSize="@dimen/text_12sp"
                    android:text="专题"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <TextView
                    android:paddingRight="@dimen/wlf_6dp"
                    android:paddingLeft="@dimen/wlf_6dp"
                    android:gravity="center"
                    android:layout_marginLeft="@dimen/wlf_16dp"
                    android:background="@drawable/zixunbiaoqian"
                    android:visibility="gone"
                    android:id="@+id/information_look3"
                    android:textColor="@color/white"
                    android:textSize="@dimen/text_12sp"
                    android:text="专题"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

            </LinearLayout>


        </RelativeLayout>

        <RelativeLayout
            android:layout_marginLeft="@dimen/wlf_20dp"
            android:layout_width="@dimen/wlf_115dp"
            android:layout_height="@dimen/wlf_78dp">
            <ImageView
                android:scaleType="fitXY"
                android:src="@drawable/wlf_deimg"
                android:id="@+id/information_img"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />
            <ImageView
                android:visibility="visible"
                android:src="@drawable/bofang"
                android:layout_centerInParent="true"
                android:id="@+id/information_img2"
                android:layout_width="@dimen/man_26dp"
                android:layout_height="@dimen/man_26dp" />
            <TextView
                android:id="@+id/tuji"
                android:visibility="gone"
                android:textSize="@dimen/text_26sp"
                android:text="7"
                android:textColor="@color/white"
                android:layout_centerInParent="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </RelativeLayout>



    </LinearLayout>
    <View
        android:layout_marginRight="@dimen/wlf_16dp"
        android:background="@color/rgb_E3E3E3"
        android:layout_marginLeft="@dimen/wlf_16dp"
        android:layout_width="match_parent"
        android:layout_height="@dimen/wlf_1dp"/>


</LinearLayout>