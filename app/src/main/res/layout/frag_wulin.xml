<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tl="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@color/white"
        >
        <RelativeLayout
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="50dp">
            <TextView
                style="@style/title_style"
                android:textColor="@color/white"
                android:text="武林" />

            <ImageView
                android:id="@+id/img_message"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:src="@drawable/news_icon"
                android:padding="8dp"
                android:scaleType="center"
                android:layout_centerVertical="true"
                />
            <RelativeLayout
                android:id="@+id/rlyt_message"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                >
                <ImageView
                    android:id="@+id/img_photo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/camera_btn"
                    android:layout_marginRight="10dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:visibility="visible"
                     />

            </RelativeLayout>
        </RelativeLayout>

        <FrameLayout
            android:layout_marginBottom="@dimen/wlf_40dp"
            android:id="@+id/vp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white"
            android:backgroundTint="@color/list_back"
            />

    </LinearLayout>

    <LinearLayout
        android:layout_alignParentBottom="true"
        android:id="@+id/fabu"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="horizontal"
        android:background="@color/white"
        >
        <RelativeLayout
            android:id="@+id/rl_senddy"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:gravity="center"
            android:layout_height="match_parent">
            <ImageView
                android:id="@+id/img1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/fabiaodongtai"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/px_21"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="发动态"
                android:textColor="#191919"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@+id/img1"
                />
        </RelativeLayout>
        <ImageView
            android:layout_width="1px"
            android:layout_height="@dimen/px_42"
            android:layout_gravity="center_vertical"
            android:background="#E3E3E3"
            />
        <RelativeLayout
            android:id="@+id/rl_sendvideo"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:gravity="center"
            android:layout_height="match_parent">
            <ImageView
                android:id="@+id/img2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/fashipin"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/px_21"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="发视频"
                android:layout_centerVertical="true"
                android:textColor="#191919"
                android:layout_toRightOf="@+id/img2"
                />
        </RelativeLayout>
    </LinearLayout>

</RelativeLayout>