<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:layout_marginLeft="@dimen/wlf_16dp"
        android:layout_marginTop="@dimen/wlf_16dp"
        android:layout_marginRight="@dimen/wlf_16dp"
        android:background="@drawable/kapiandibu1"
        android:layout_width="@dimen/wlf_300dp"
        android:layout_height="@dimen/wlf_165dp">
        <ImageView
            android:src="@drawable/wlf_deimg"
            android:id="@+id/topic_image"
            android:scaleType="fitXY"
            android:layout_width="@dimen/wlf_300dp"
            android:layout_height="@dimen/wlf_150dp" />
        <ImageView
            android:background="@color/transparent_five"
            android:scaleType="fitXY"
            android:layout_width="@dimen/wlf_300dp"
            android:layout_height="@dimen/wlf_150dp" />
        <LinearLayout
            android:gravity="center"
            android:orientation="vertical"
            android:layout_centerInParent="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/topic_name"
                android:textSize="@dimen/text_18sp"
                android:textColor="@color/white"
                android:text="#中加对抗赛#"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/topic_nub"
                android:layout_marginTop="@dimen/wlf_10dp"
                android:textSize="@dimen/text_14sp"
                android:textColor="@color/rgb_FF6566"
                android:text="1256次参与"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </LinearLayout>
    </RelativeLayout>

</RelativeLayout>