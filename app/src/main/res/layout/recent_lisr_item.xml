<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:gravity="center_vertical"
        android:layout_marginBottom="@dimen/wlf_10dp"
        android:layout_marginTop="@dimen/wlf_10dp"
        android:layout_marginLeft="@dimen/wlf_16dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/recent_bofang"
            android:src="@drawable/shipinzixun"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:gravity="center"
            android:id="@+id/recent_name"
            android:paddingRight="@dimen/wlf_4dp"
            android:paddingLeft="@dimen/wlf_4dp"
            android:paddingTop="@dimen/wlf_2dp"
            android:paddingBottom="@dimen/wlf_2dp"
            android:textSize="@dimen/text_10sp"
            android:textColor="@color/rgb_BA2B2C"
            android:text="西提猜"
            android:layout_marginLeft="@dimen/wlf_8dp"
            android:background="@drawable/zixunbiaoqian1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:gravity="center"
            android:id="@+id/recent_name2"
            android:paddingRight="@dimen/wlf_4dp"
            android:paddingLeft="@dimen/wlf_4dp"
            android:paddingTop="@dimen/wlf_2dp"
            android:paddingBottom="@dimen/wlf_2dp"
            android:textSize="@dimen/text_10sp"
            android:textColor="@color/rgb_0074FF"
            android:text="判定"
            android:layout_marginLeft="@dimen/wlf_8dp"
            android:background="@drawable/zixunbiaoqian2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/recent_content"
            android:singleLine="true"
            android:ellipsize="end"
            android:text="中外自由搏击对抗赛在河津市举行"
            android:layout_marginLeft="@dimen/wlf_4dp"
            android:textColor="@color/rgb_000000"
            android:textSize="@dimen/text_16sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>


</LinearLayout>