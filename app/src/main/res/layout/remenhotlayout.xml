<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="54dp">
        <TextView
            android:textColor="@color/rgb_5B6676"
            android:textSize="@dimen/text_20sp"
            android:layout_marginLeft="@dimen/wlf_16dp"
            android:text="热门活动"
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/genduohuodong"
            android:drawablePadding="@dimen/wlf_5dp"
            android:drawableRight="@drawable/you"
            android:textColor="@color/rgb_444444"
            android:layout_alignParentRight="true"
            android:textSize="@dimen/text_13sp"
            android:layout_marginRight="@dimen/wlf_16dp"
            android:text="更多"
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RelativeLayout>
    <android.support.v7.widget.RecyclerView
        android:id="@+id/huodong_grid"
        android:layout_marginRight="@dimen/wlf_16dp"
        android:layout_marginLeft="@dimen/wlf_16dp"
        android:layout_width="match_parent"
        android:layout_height="146dp"/>


</LinearLayout>