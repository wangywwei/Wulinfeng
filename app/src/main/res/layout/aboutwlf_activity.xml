<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/list_back"
    >
    <RelativeLayout
        android:id="@+id/rl_layout"
        android:layout_width="match_parent"
        android:layout_height="50dp">
        <TextView
            style="@style/title_style"
            android:text="关于武林风"
            android:textColor="@color/white"
            />

        <ImageView
            android:id="@+id/user_icon"
            android:layout_width="40dp"
            android:layout_height="match_parent"
            android:scaleType="center"
            android:layout_centerVertical="true"
            android:src="@drawable/backup_icon"
            />
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="120dp">
        <ImageView
            android:id="@+id/iv_logo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:scaleType="fitXY"
            android:layout_centerInParent="true"
            android:background="@drawable/aboutwlflogo"
            />
        <TextView
            android:id="@+id/tv_verison"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:text=" -- "
            android:layout_below="@+id/iv_logo"
            android:layout_marginTop="5dp"
            android:layout_centerHorizontal="true"
            />
    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="vertical"
        android:layout_marginTop="10dp"
        >
        <RelativeLayout
            android:visibility="gone"
            android:id="@+id/rl_banben"
            android:layout_width="match_parent"
            android:layout_height="@dimen/px_129"
            android:background="@color/white"
            >
            <TextView
                android:id="@+id/phoneNum"
                android:layout_marginLeft="10dp"
                android:layout_centerVertical="true"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="检查新版本"
                android:textColor="#3c3c3c"
                android:textSize="@dimen/px_42"
                />
            <TextView
                android:id="@+id/tv_gengxin"
                android:layout_marginTop="9dp"
                android:layout_marginRight="10dp"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_centerVertical="true"
                android:textSize="@dimen/px_39"
                android:gravity="center"
                android:layout_toLeftOf="@+id/iv_dian"
                android:textColor="@color/text_col"
                android:text="发现新版本"
                />
            <ImageView
                android:id="@+id/iv_dian"
                android:layout_width="5dp"
                android:layout_height="5dp"
                android:layout_toLeftOf="@+id/iv_jiantou1"
                android:src="@drawable/red_point"
                android:layout_alignParentTop="true"
                android:layout_marginTop="15dp"
                android:layout_centerVertical="true"
                android:layout_marginRight="10dp"
                />
            <ImageView
                android:id="@+id/iv_jiantou1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/more_right"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="10dp"
                />

        </RelativeLayout>
        <View
            android:visibility="gone"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:background="#cccccc" />

        <RelativeLayout
            android:id="@+id/rl_tiaokuan"
            android:layout_width="match_parent"
            android:layout_height="@dimen/px_129"
            android:background="@color/white"
            >

            <TextView
                android:id="@+id/code_sms"
                android:layout_marginLeft="10dp"
                android:layout_centerVertical="true"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="使用条款"
                android:textColor="#3c3c3c"
                android:textSize="@dimen/px_42"
                android:textColorHint="#9a9a9a"
                android:background="@null"/>
            <ImageView
                android:id="@+id/iv_jiantou2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/more_right"
                android:layout_alignParentRight="true"
                android:layout_marginRight="10dp"
                android:layout_centerVertical="true"
                />
        </RelativeLayout>

        <View
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:background="#cccccc" />
        <RelativeLayout
            android:id="@+id/rl_zhengce"
            android:layout_width="match_parent"
            android:layout_height="@dimen/px_129"
            android:background="@color/white"
            >

            <TextView
                android:id="@+id/code_sms1"
                android:layout_marginLeft="10dp"
                android:layout_centerVertical="true"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#3c3c3c"
                android:text="隐私政策"
                android:textSize="@dimen/px_42"
                android:textColorHint="#9a9a9a"
                android:background="@null"/>
            <ImageView
                android:id="@+id/iv_jiantou3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/more_right"
                android:layout_alignParentRight="true"
                android:layout_marginRight="10dp"
                android:layout_centerVertical="true"
                />
        </RelativeLayout>
    </LinearLayout>

</LinearLayout>