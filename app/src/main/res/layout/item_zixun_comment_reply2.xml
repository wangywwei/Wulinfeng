<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/wlf_16dp"
        android:layout_marginRight="@dimen/wlf_16dp"
        android:background="@color/white"
        android:padding="2dp"
        android:orientation="horizontal" >
    <TextView
        android:id="@+id/tv_comment_reply_writer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="作者"
        android:maxEms = "3"
        android:singleLine="true"
        android:ellipsize="middle"
        android:textColor="@color/rgb_207CC5"
        android:textSize="14sp"
        android:lineSpacingExtra="6dp"/>
        <TextView
            android:visibility="gone"
            android:id="@+id/tv_comment_reply_writer2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="回复"
            android:textColor="@color/rgb_888888"
            android:textSize="14sp"
            android:lineSpacingExtra="6dp"/>
        <TextView
            android:singleLine="true"
            android:maxEms = "3"
            android:ellipsize="middle"
            android:visibility="gone"
            android:id="@+id/tv_comment_reply_writer3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="作者"
            android:textColor="@color/rgb_207CC5"
            android:textSize="14sp"
            android:lineSpacingExtra="6dp"/>

    <TextView
        android:id="@+id/tv_comment_reply_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="这里是作者给的回复"
        android:lineSpacingExtra="6dp"
        android:textColor="#666"
        android:textSize="14sp" />
    </LinearLayout>

    <TextView
        android:layout_marginTop="@dimen/wlf_12dp"
        android:layout_marginRight="@dimen/wlf_16dp"
        android:id="@+id/tv_all"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="查看全部回复"
        android:layout_marginLeft="@dimen/wlf_16dp"
        android:textColor="#666"
        android:visibility="gone"
        android:background="@color/white"
        android:textSize="14sp" />
        <ImageView
            android:id="@+id/iv_jiange"
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:background="@color/white"
            android:visibility="gone"
            />

</LinearLayout>