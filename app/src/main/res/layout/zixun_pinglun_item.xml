<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#ffffff"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/iv_line"
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="@color/list_line" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:gravity="center_vertical">

        <ImageView
            android:id="@+id/user_icon"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="15dp"
            android:scaleType="fitXY"
            android:src="@drawable/touxiang_img" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_centerVertical="true"
            android:layout_alignTop="@+id/user_icon"
            android:layout_alignBottom="@+id/user_icon"
            android:layout_toRightOf="@+id/user_icon"
            android:orientation="vertical"
            >

            <TextView
                android:layout_centerVertical="true"
                android:id="@+id/user_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" -- "
                android:textColor="#ff888888"
                android:textSize="14sp" />
            <ImageView
                android:visibility="gone"
                android:id="@+id/shenping"
                android:layout_toLeftOf="@id/fatie_time"
                android:layout_marginRight="@dimen/wlf_40dp"
                android:layout_alignParentRight="true"
                android:src="@drawable/zhang"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/wlf_16dp"
                android:layout_alignParentRight="true"
                android:id="@+id/fatie_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" -- "
                android:layout_marginTop="5dp"
                android:textColor="#999999"
                android:textSize="13sp" />
        </RelativeLayout>


    </RelativeLayout>

    <LinearLayout
        android:orientation="vertical"
        android:id="@+id/ll_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
        <TextView
            android:background="@color/white"
            android:id="@+id/pinglun_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="60dp"
            android:layout_marginRight="10dp"
            android:paddingBottom="6dp"
            android:text=""
            android:textColor="#222"
            android:textSize="16sp" />
        <TextView
            android:visibility="gone"
            android:layout_marginTop="@dimen/wlf_10dp"
            android:background="@color/rgb_EFEFEF"
            android:id="@+id/pinglun_content2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="60dp"
            android:layout_marginRight="10dp"
            android:paddingBottom="6dp"
            android:text=""
            android:textColor="#222"
            android:textSize="16sp" />

    </LinearLayout>
    <RelativeLayout
        android:layout_marginTop="@dimen/wlf_16dp"
        android:layout_marginBottom="@dimen/wlf_10dp"
        android:layout_alignBottom="@+id/user_icon"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingRight="10dp"
            >

            <ImageView
                android:id="@+id/iv_zan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:src="@drawable/zan_icon" />

            <TextView
                android:layout_marginLeft="@dimen/wlf_6dp"
                android:id="@+id/tv_zancount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" -- "
                android:textColor="@color/rgb_888888" />

            <ImageView
                android:id="@+id/btn_comment_reply"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="29dp"
                android:layout_marginTop="@dimen/px_9"
                android:background="@drawable/pinglun_icon" />
            <TextView
                android:layout_marginLeft="@dimen/wlf_6dp"
                android:layout_marginRight="@dimen/wlf_32dp"
                android:id="@+id/tv_zancount2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" -- "
                android:textColor="@color/rgb_888888" />
        </LinearLayout>
    </RelativeLayout>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        android:paddingBottom="8dp"
        android:visibility="gone"
        >
    </RelativeLayout>

</LinearLayout>
