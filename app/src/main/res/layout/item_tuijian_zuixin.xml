<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical">

    <android.support.v7.widget.RecyclerView
        android:id="@+id/rlv_toutiao_tuijian"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/list_line"
        android:orientation="horizontal" />
    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="#EFEFEF"
        ></View>

    <RelativeLayout
        android:id="@+id/rl_goon"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/iv_view2"
        android:gravity="center">

        <TextView
            android:id="@+id/tv_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:gravity="center"
            android:paddingTop="14dp"
            android:paddingBottom="14dp"
            android:text="本月有6场比赛可以预约观看"
            android:textColor="#f4524D"
            android:textSize="@dimen/px_36" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/px_15"
            android:layout_toRightOf="@+id/tv_num"
            android:src="@drawable/chakan"
            />
    </RelativeLayout>
</LinearLayout>