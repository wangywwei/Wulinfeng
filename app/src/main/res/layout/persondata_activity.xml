<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/rl_layout"
        android:layout_width="match_parent"
        android:layout_height="50dp">

        <TextView
            style="@style/title_style"
            android:text="个人资料"
            android:textColor="@color/white" />

        <ImageView
            android:id="@+id/user_icon"
            android:layout_width="40dp"
            android:layout_height="match_parent"
            android:scaleType="center"
            android:layout_centerVertical="true"
            android:src="@drawable/backup_icon"
            />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_changehead"
        android:layout_width="match_parent"
        android:layout_height="67dp"
        android:layout_marginTop="5dp"
        android:background="@color/white">

        <TextView
            android:id="@+id/phoneNum"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:text="修改头像"
            android:textColor="#3c3c3c"
            android:textSize="13sp" />
        <ImageView
            android:id="@+id/iv_jiantou1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:src="@drawable/more_right" />
        <ImageView
            android:id="@+id/iv_headpic"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:padding="5dp"
            android:scaleType="centerCrop"
            android:layout_toLeftOf="@+id/iv_jiantou1"
            android:src="@drawable/touxiang1" />
    </RelativeLayout>

    <View
        android:layout_width="fill_parent"
        android:layout_height="1.5px"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="#cccccc" />

    <RelativeLayout
        android:id="@+id/rl_username"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:background="@color/white">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:background="@null"
            android:inputType="number"
            android:text="用户名"
            android:textColor="#3c3c3c"
            android:textColorHint="#9a9a9a"
            android:textSize="13sp" />
        <ImageView
            android:id="@+id/iv_jiantou2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:src="@drawable/more_right" />
        <TextView
            android:id="@+id/tv_username"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:background="@null"
            android:layout_toLeftOf="@+id/iv_jiantou2"
            android:text=" -- "
            android:textColor="@color/text_col"
            android:textSize="13sp" />
    </RelativeLayout>

    <View
        android:layout_width="fill_parent"
        android:layout_height="1.5px"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="#cccccc" />

    <RelativeLayout
        android:id="@+id/rl_changephone"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:background="@color/white">

        <TextView
            android:id="@+id/tv_setphone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:background="@null"
            android:inputType="number"
            android:text="修改手机号"
            android:textColor="#3c3c3c"
            android:textColorHint="#9a9a9a"
            android:textSize="13sp" />

        <ImageView
            android:id="@+id/iv_jiantou3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:src="@drawable/more_right" />
        <TextView
            android:id="@+id/tv_phone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:background="@null"
            android:layout_toLeftOf="@+id/iv_jiantou3"
            android:text=" -- "
            android:textColor="@color/text_col"
            android:textSize="13sp" />
    </RelativeLayout>
    <View
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:background="#cccccc" />

    <RelativeLayout
        android:id="@+id/rl_changepwd"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:visibility="visible"
        android:background="@color/white">

        <TextView
            android:id="@+id/tv_setpwd"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:background="@null"
            android:inputType="number"
            android:text="修改密码"
            android:textColor="#3c3c3c"
            android:textColorHint="#9a9a9a"
            android:textSize="13sp" />
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:src="@drawable/more_right" />
    </RelativeLayout>
    <View
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:background="#cccccc" />
    <RelativeLayout
        android:id="@+id/rl_weixing"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:visibility="visible"
        android:background="@color/white">

        <TextView
            android:id="@+id/tv_weixing"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:background="@null"
            android:inputType="number"
            android:text="绑定微信"
            android:textColor="#3c3c3c"
            android:textColorHint="#9a9a9a"
            android:textSize="13sp" />
        <TextView
            android:id="@+id/tv_wx"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:background="@null"
            android:layout_toLeftOf="@+id/iv_jiantou5"
            android:text=" -- "
            android:textColor="@color/text_col"
            android:textSize="13sp" />
        <ImageView
            android:id="@+id/iv_jiantou5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/wlf_10dp"
            android:src="@drawable/more_right" />
    </RelativeLayout>




    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <TextView
            android:id="@+id/data_logout"
            android:layout_width="match_parent"
            android:layout_height="53dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginTop="257dp"
            android:background="@color/white"
            android:gravity="center"
            android:text="退出登录"
            android:textColor="@color/shouye_tab"
            android:textSize="@dimen/text_18sp" />





    </RelativeLayout>

</LinearLayout>