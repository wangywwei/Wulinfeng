<?xml version="1.0" encoding="utf-8"?>
<com.hxwl.common.tencentplay.tencentCloud.V4HudongView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <LinearLayout
        android:layout_weight="1"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <RelativeLayout
            android:layout_marginBottom="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/relativeLayout3"
            >


            <ImageView
                android:layout_marginLeft="28dp"
                android:layout_marginBottom="8dp"
                android:id="@+id/red_pic1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/red_fist"/>

            <RelativeLayout
                android:layout_below="@+id/red_pic1"
                android:id="@+id/fl_user_icon"
                android:layout_marginLeft="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <FrameLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true">

                    <ImageView
                        android:layout_width="63dp"
                        android:layout_height="63dp"
                        android:id="@+id/view1"
                        android:scaleType="centerCrop"
                        android:layout_gravity="center"
                        android:background="@drawable/red_touxiang_img"
                        />
                    <ImageView
                        android:scaleType="centerCrop"
                        android:id="@+id/red_icon"
                        android:layout_gravity="center"
                        android:layout_width="58dp"
                        android:layout_height="58dp"
                        android:background="@drawable/touxiang_img"
                        />
                </FrameLayout>

                <LinearLayout
                    android:layout_marginTop="50dp"
                    android:paddingBottom="3dp"
                    android:paddingTop="3dp"
                    android:paddingLeft="10dp"
                    android:paddingRight="5dp"
                    android:layout_width="70dp"
                    android:layout_centerHorizontal="true"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:background="@drawable/hudong_corners_red">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/fire"
                        android:layout_marginRight="3dp"
                        android:id="@+id/imageView" />

                    <TextView
                        android:gravity="center"
                        android:id="@+id/tv_red_hudongNum"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=""
                        android:textSize="14sp"
                        android:maxLength="5"
                        android:singleLine="true"
                        android:layout_gravity="center"
                        android:textColor="#ffffff"/>
                </LinearLayout>
            </RelativeLayout>


            <ImageView
                android:layout_marginLeft="5dp"
                android:layout_marginTop="28dp"
                android:id="@+id/red_pic2"
                android:layout_toRightOf="@+id/fl_user_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/red_leg"/>

            <ImageView
                android:layout_marginLeft="10dp"
                android:layout_marginTop="82dp"
                android:id="@+id/red_pic3"
                android:layout_toRightOf="@+id/fl_user_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/red_knee"/>
        </RelativeLayout>
    </LinearLayout>



    <LinearLayout
        android:layout_weight="1"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >
            <ImageView
                android:layout_alignParentRight="true"
                android:layout_marginRight="32dp"
                android:layout_marginBottom="8dp"
                android:id="@+id/blue_pic1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/blue_fist"/>

            <RelativeLayout
                android:layout_below="@+id/blue_pic1"
                android:id="@+id/fl_user_icon2"
                android:layout_marginRight="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true">
                <FrameLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true">

                    <ImageView
                        android:layout_width="63dp"
                        android:layout_height="63dp"
                        android:id="@+id/view2"
                        android:scaleType="centerCrop"
                        android:layout_gravity="center"
                        android:background="@drawable/blue_touxiang_img"
                        />
                    <ImageView
                        android:scaleType="centerCrop"
                        android:id="@+id/blue_icon"
                        android:layout_gravity="center"
                        android:layout_width="58dp"
                        android:layout_height="58dp"
                        android:background="@drawable/touxiang_img"
                        />
                </FrameLayout>

                <LinearLayout
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="50dp"
                    android:paddingBottom="3dp"
                    android:paddingTop="3dp"
                    android:paddingLeft="10dp"
                    android:paddingRight="5dp"
                    android:layout_width="70dp"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:background="@drawable/hudong_corners_blue">
                    <ImageView
                        android:layout_gravity="center_vertical"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/fire"
                        android:layout_marginRight="3dp"/>
                    <TextView
                        android:gravity="center_horizontal"
                        android:id="@+id/tv_blue_hudongNum"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=""
                        android:maxLength="5"
                        android:textSize="14sp"
                        android:singleLine="true"
                        android:textColor="#ffffff"/>



                </LinearLayout>
            </RelativeLayout>


            <ImageView
                android:layout_marginRight="10dp"
                android:layout_marginTop="82dp"
                android:id="@+id/blue_pic3"
                android:layout_toLeftOf="@+id/fl_user_icon2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/blue_knee"/>

            <ImageView
                android:layout_marginTop="28dp"
                android:id="@+id/blue_pic2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/blue_leg"
                android:layout_alignParentTop="true"
                android:layout_alignLeft="@+id/blue_pic3"
                android:layout_alignStart="@+id/blue_pic3" />
        </RelativeLayout>
    </LinearLayout>





</com.hxwl.common.tencentplay.tencentCloud.V4HudongView>