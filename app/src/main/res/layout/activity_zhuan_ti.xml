<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.hxwl.newwlf.home.home.Recommend.ZhuanTiActivity">
    <RelativeLayout
        android:background="@color/rgb_BA2B2C"
        android:layout_width="match_parent"
        android:layout_height="@dimen/wlf_44dp">
        <ImageView
            android:id="@+id/back"
            android:layout_marginLeft="@dimen/wlf_16dp"
            android:layout_centerVertical="true"
            android:src="@drawable/backup_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:text="专题"
            android:textSize="@dimen/wlf_18dp"
            android:textColor="@color/white"
            android:layout_centerInParent="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RelativeLayout>


    <TextView
        android:id="@+id/no_information"
        android:visibility="gone"
        android:gravity="center"
        android:textColor="@color/rgb_888888"
        android:text="暂是时没有资讯"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />
    <com.jcodecraeer.xrecyclerview.XRecyclerView
        android:id="@+id/information_recycle"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>
</LinearLayout>
