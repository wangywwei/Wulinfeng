<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="140dp"
    xmlns:lv="http://schemas.android.com/apk/res-auto"
    android:background="#212121"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/llyt_toutiao_duizhen"
        android:layout_width="match_parent"
        android:layout_height="140dp"
        android:layout_marginLeft="6dp"
        android:minWidth="400dp"
        android:background="#222"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:background="#282828">

            <TextView
                android:id="@+id/tv_toutiao_duizhen_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:gravity="center"
                android:padding="4dp"
                android:text="一龙VS播求"
                android:textColor="#e6ae1f"
                android:textSize="14sp" />

        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="#333333" />

        <RelativeLayout
            android:id="@+id/rl_content"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/ll_title"
            android:background="#282828">

            <TextView
                android:id="@+id/changci"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="10dp"
                android:text="-第六场-"
                android:textColor="#a0a0a0"
                android:textSize="10sp" />

            <ImageView
                android:id="@+id/iv_vs"
                android:layout_width="30dp"
                android:layout_height="23dp"
                android:layout_below="@+id/changci"
                android:layout_centerHorizontal="true"
                android:background="@drawable/jingcai_icon2"
                android:layout_marginTop="10dp" />

            <TextView
                android:id="@+id/guessing"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/iv_vs"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="9dp"
                android:text=" "
                android:textColor="#ffffff"
                android:textSize="9sp" />


            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/guessing"
                android:layout_centerInParent="true"
                android:layout_marginTop="7dp">

                <ImageView
                    android:id="@+id/iv_ren"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:background="@drawable/jingcai_icon2" />

                <TextView
                    android:id="@+id/tv_guessing_num"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="4.5dp"
                    android:layout_toRightOf="@+id/iv_ren"
                    android:gravity="center_vertical"
                    android:text="5236人竞猜"
                    android:textColor="#a0a0a0"
                    android:textSize="11sp" />


            </RelativeLayout>


            <RelativeLayout
                android:layout_marginBottom="7dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="26dp"
                android:layout_marginTop="18dp">

                <ImageView
                    android:id="@+id/iv_player_icon_left"
                    android:layout_width="58dp"
                    android:layout_height="58dp"
                    android:layout_centerHorizontal="true"
                    android:scaleType="centerCrop" />

                <LinearLayout
                    android:layout_width="70dp"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/iv_player_icon_left"
                    android:layout_marginTop="8dp"
                    android:gravity="center_horizontal"
                    android:orientation="horizontal"
                    android:paddingBottom="6dp">

                    <ImageView
                        android:id="@+id/iv_country_left"
                        android:layout_width="18dp"
                        android:layout_height="12dp"
                        android:layout_gravity="center_vertical" />

                    <TextView
                        android:id="@+id/tv_playerA_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="5dp"
                        android:singleLine="true"
                        android:text="王洪祥"
                        android:textColor="#ffffff"
                        android:textSize="11dp" />
                </LinearLayout>

                <ImageView
                    android:visibility="gone"
                    android:id="@+id/iv_sheng_left"
                    android:layout_width="18dp"
                    android:layout_height="18dp"
                    android:background="@drawable/jingcai_icon2"
                    android:layout_alignParentTop="true"
                    android:layout_alignRight="@+id/iv_player_icon_left"
                    android:layout_alignEnd="@+id/iv_player_icon_left" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginRight="26dp"
                android:layout_marginTop="18dp">

                <ImageView
                    android:id="@+id/iv_player_icon_right"
                    android:layout_width="58dp"
                    android:layout_height="58dp"
                    android:layout_centerHorizontal="true"
                    android:scaleType="centerCrop" />

                <LinearLayout
                    android:layout_width="70dp"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/iv_player_icon_right"
                    android:layout_marginTop="8dp"
                    android:gravity="center_horizontal"
                    android:orientation="horizontal"
                    android:paddingBottom="6dp">

                    <ImageView
                        android:id="@+id/iv_country_right"
                        android:layout_width="18dp"
                        android:layout_height="12dp"
                        android:layout_gravity="center_vertical" />

                    <TextView
                        android:id="@+id/tv_playerB_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="5dp"
                        android:singleLine="true"
                        android:text="王洪祥"
                        android:textColor="#ffffff"
                        android:textSize="11dp" />
                </LinearLayout>
                <ImageView
                    android:visibility="gone"
                    android:id="@+id/iv_sheng_right"
                    android:layout_width="18dp"
                    android:layout_height="18dp"
                    android:background="@drawable/jingcai_icon2"
                    android:layout_alignParentTop="true"
                    android:layout_alignRight="@+id/iv_player_icon_right"
                    android:layout_alignEnd="@+id/iv_player_icon_right" />

            </RelativeLayout>

            <com.flyco.labelview.LabelView
                android:id="@+id/lableView"
                android:layout_alignParentRight="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                lv:lv_gravity="TOP_RIGHT"
                lv:lv_background_color="#0cffffff"
                android:background="@drawable/jingcai_icon2"
                lv:lv_text_size="12sp"/>
        </RelativeLayout>

    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:background="#222"/>
</LinearLayout>