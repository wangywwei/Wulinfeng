<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="60dp"
        android:layout_marginRight="10dp"
        android:background="@color/list_back"
        android:padding="5dp"
        android:orientation="horizontal" >
        <TextView
            android:id="@+id/tv_comment_reply_writer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="作者"
            android:textColor="#32689E"
            android:textSize="14sp"
            android:lineSpacingExtra="6dp"/>
        <TextView
            android:visibility="gone"
            android:id="@+id/tv_comment_reply_writer2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="回复"
            android:textColor="@color/rgb_888888"
            android:textSize="14sp"
            android:lineSpacingExtra="6dp"/>
        <TextView
            android:visibility="gone"
            android:id="@+id/tv_comment_reply_writer3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingRight="10sp"
            android:text="作者"
            android:textColor="#32689E"
            android:textSize="14sp"
            android:lineSpacingExtra="6dp"/>

        <TextView
            android:id="@+id/tv_comment_reply_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="这里是作者给的回复"
            android:lineSpacingExtra="6dp"
            android:textColor="#666"
            android:textSize="14sp" />
    </LinearLayout>
</LinearLayout>