<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent">
    <LinearLayout
        android:id="@+id/gengduo1_layout"
        android:orientation="vertical"
        android:layout_marginTop="@dimen/wlf_17dp"
        android:layout_marginRight="@dimen/wlf_17dp"
        android:layout_marginLeft="@dimen/wlf_17dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/gengduo1_img"
            android:scaleType="centerCrop"
            android:src="@drawable/wlf_deimg"
            android:layout_width="match_parent"
            android:layout_height="180dp" />
        <TextView
            android:id="@+id/gengduo1_name"
            android:layout_marginBottom="@dimen/wlf_17dp"
            android:layout_marginTop="@dimen/wlf_17dp"
            android:textSize="@dimen/text_20sp"
            android:text="武林风之环球拳王争霸赛昆明赛"
            android:layout_marginLeft="@dimen/wlf_16dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </LinearLayout>



</LinearLayout>