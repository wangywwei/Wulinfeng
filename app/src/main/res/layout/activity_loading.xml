<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical" >


    <ImageView
        android:id="@+id/iv_loadingimage"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center_horizontal"
        android:src="@drawable/qidong"
          />


    <LinearLayout
        android:id="@+id/llyt_jishi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="20dp"
        android:layout_marginRight="10dp"
        android:paddingRight="6dp"
        android:paddingLeft="6dp"
        android:paddingTop="4dp"
        android:gravity="center"
        android:paddingBottom="4dp"
        android:background="@drawable/tiaoguo"
        android:visibility="gone"
        >
        <TextView
            android:id="@+id/tv_tiaoguo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="跳过"
            android:textSize="@dimen/textSize_more_little_14sp"
            android:textColor="@color/shouye_tab"
            />
        <TextView
            android:id="@+id/tv_time"
            android:layout_alignRight="@+id/tv_tiaoguo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="2dp"
            android:text="2"
            android:textSize="@dimen/textSize_little_16sp"
            android:textColor="@color/red"
            />
    </LinearLayout>

</RelativeLayout>