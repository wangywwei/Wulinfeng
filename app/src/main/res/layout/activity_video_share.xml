<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rl_root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f3f3f3">

    <RelativeLayout
        android:id="@+id/rl_title"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="@color/shouye_tab"
        android:gravity="center_vertical">

        <TextView
            android:id="@+id/tv_cancel"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:text="取消"
            android:textColor="@android:color/white"
            android:textSize="14sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:text="分享"
            android:textColor="@android:color/white"
            android:textSize="14sp"
            android:visibility="visible" />
    </RelativeLayout>
    <!--中间部分-->

    <RelativeLayout
        android:id="@+id/rlyt_center"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:layout_below="@+id/rl_title"
        >

        <ImageView
            android:id="@+id/iv_thumbnail"
            android:layout_width="81dp"
            android:layout_height="108dp"
            android:layout_centerVertical="true"
            android:scaleType="fitXY"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            />

        <LinearLayout
            android:id="@+id/llyt_share_content"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_toRightOf="@+id/iv_thumbnail"
            >
            
            <EditText
                android:id="@+id/edt_input_content"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#f3f3f3"
                android:layout_margin="10dp"
                android:paddingBottom="70dp"
                android:hint="说点什么..."
                android:textSize="15sp"
                android:textColor="#666"
                android:textColorHint="#999999"
                />

        </LinearLayout>
    </RelativeLayout>
    <LinearLayout
        android:layout_below="@+id/rlyt_center"
        android:id="@+id/addhuati"
        android:layout_marginLeft="@dimen/wlf_16dp"
        android:layout_marginTop="@dimen/wlf_10dp"
        android:layout_width="match_parent"
        android:layout_height="@dimen/wlf_24dp">
        <ImageView
            android:src="@drawable/jiahuati"
            android:layout_width="@dimen/wlf_24dp"
            android:layout_height="@dimen/wlf_24dp" />
        <TextView
            android:gravity="center"
            android:textColor="@color/rgb_444444"
            android:layout_marginLeft="@dimen/wlf_16dp"
            android:text="加个话题"
            android:layout_width="wrap_content"
            android:layout_height="match_parent" />

    </LinearLayout>

    <RelativeLayout
        android:id="@+id/rlyt_fabu"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_below="@+id/addhuati"
        android:background="#fbc700"
        android:layout_margin="10dp"
        >
        <TextView
            android:id="@+id/tvfb"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="发布"
            android:textSize="14sp"
            android:textColor="#ffffff"
            android:layout_margin="10dp"
            android:layout_centerInParent="true"
            />
    </RelativeLayout>

    <!--底下部分-->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#ffffff"
        android:layout_below="@+id/rlyt_center"
        android:visibility="gone"
        >
        <TextView
            android:id="@+id/tv1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="同时分享到"
            android:textSize="14sp"
            android:textColor="#222222"
            android:layout_margin="10dp"
            />

        <LinearLayout
            android:id="@+id/llyt_center1"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_margin="10dp"
            android:layout_below="@+id/tv1"
            android:orientation="horizontal"
            >
            <RelativeLayout
                android:id="@+id/rlyt_wx_pyq"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="40dp"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                >
                <CheckedTextView
                    android:id="@+id/ctv_wxpyq"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/ssdk_oks_classic_wechatmoments"
                    android:button="@null"
                    android:visibility="visible"
                    android:layout_centerHorizontal="true"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="微信朋友圈"
                    android:gravity="center_horizontal"
                    android:layout_below="@+id/ctv_wxpyq"
                    android:layout_marginTop="4dp"
                    android:layout_centerHorizontal="true"
                    />
            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/rlyt_wx_hy"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginRight="40dp"
                android:layout_gravity="center_vertical"
                >
                <CheckedTextView
                    android:id="@+id/ctv_wxhy"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/ssdk_oks_classic_wechat"
                    android:button="@null"
                    android:visibility="visible"
                    android:layout_centerHorizontal="true"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="微信好友"
                    android:gravity="center_horizontal"
                    android:layout_below="@+id/ctv_wxhy"
                    android:layout_marginTop="4dp"
                    android:layout_centerHorizontal="true"
                    />
            </RelativeLayout>


        </LinearLayout>

        <RelativeLayout
            android:id="@+id/rlyt_fabu2"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_below="@+id/llyt_center1"
            android:background="#fbc700"
            android:layout_margin="10dp"
            >
            <TextView
                android:id="@+id/tvfb2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="发布"
                android:textSize="14sp"
                android:textColor="#ffffff"
                android:layout_margin="10dp"
                android:layout_centerInParent="true"
                />
        </RelativeLayout>
    </RelativeLayout>
</RelativeLayout>