<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFF"
    android:orientation="vertical">


    <LinearLayout
        android:id="@+id/guidea_lauoyt"
        android:layout_width="match_parent"
        android:layout_height="@dimen/wlf_65dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/wlf_16dp"
            android:layout_marginRight="@dimen/wlf_16dp"
            android:gravity="center_vertical">


            <TextView
                android:id="@+id/guidea_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="aaaaaaaa"
                android:textColor="#222222"
                android:textSize="@dimen/text_18sp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/wlf_1dp"
                android:layout_marginLeft="@dimen/wlf_16dp"
                android:layout_weight="1"
                android:background="#E3E3E3" />


        </LinearLayout>


        <TextView
            android:id="@+id/guidea_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/wlf_16dp"
            android:layout_marginRight="@dimen/wlf_16dp"
            android:text="aaaaaaaaaaaaaaaa"
            android:textColor="#666666"
            android:textSize="@dimen/text_14sp"
            android:layout_marginTop="@dimen/wlf_4dp"
            android:layout_marginBottom="@dimen/wlf_16dp" />


        <LinearLayout
            android:id="@+id/guidea_layout"
            android:layout_marginTop="@dimen/wlf_8dp"
            android:layout_marginBottom="@dimen/wlf_16dp"
            android:layout_marginLeft="@dimen/wlf_16dp"
            android:layout_marginRight="@dimen/wlf_16dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:visibility="gone">


            <ImageView
                android:layout_width="@dimen/wlf_11dp"
                android:layout_height="@dimen/wlf_13dp"
                android:src="@drawable/weizhi" />


            <TextView
                android:id="@+id/guidea_weizhi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/wlf_6dp"
                android:text="背景体育城"
                android:textColor="#007AFF"
                android:textSize="@dimen/text_14sp" />


        </LinearLayout>


    </LinearLayout>


</LinearLayout>