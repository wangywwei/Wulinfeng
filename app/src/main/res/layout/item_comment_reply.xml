<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@color/white"
    >
    <LinearLayout
        android:layout_marginLeft="@dimen/wlf_16dp"
        android:id="@+id/ll_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="10dp"
        android:paddingRight="5dp"
        android:orientation="horizontal" >
    <TextView
        android:singleLine="true"
        android:maxEms = "3"
        android:ellipsize="middle"
        android:id="@+id/tv_comment_reply_writer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="作者"
        android:textColor="@color/rgb_207CC5"
        android:textSize="14sp"
        android:lineSpacingExtra="6dp"/>
        <TextView
            android:visibility="gone"
            android:id="@+id/tv_comment_reply_writer2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="回复"
            android:textColor="@color/rgb_888888"
            android:textSize="14sp"
            android:lineSpacingExtra="6dp"/>
        <TextView
            android:singleLine="true"
            android:maxEms = "3"
            android:ellipsize="middle"
            android:visibility="gone"
            android:id="@+id/tv_comment_reply_writer3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="作者"
            android:textColor="@color/rgb_207CC5"
            android:textSize="14sp"
            android:lineSpacingExtra="6dp"/>

    <TextView
        android:id="@+id/tv_comment_reply_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="这里是作者给的回复"
        android:lineSpacingExtra="6dp"
        android:textColor="@color/rgb_666666"
        android:layout_marginRight="5dp"
        android:textSize="14sp" />
    </LinearLayout>
    <ImageView
        android:id="@+id/view"
        android:layout_width="match_parent"
        android:layout_height="5dp"
        android:visibility="gone"
        android:background="@color/white"
        />
    <TextView
        android:id="@+id/tv_all"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:layout_marginLeft="@dimen/wlf_16dp"
        android:paddingRight="5dp"
        android:text="查看全部回复"
        android:textColor="@color/rgb_888888"
        android:visibility="gone"
        android:textSize="14sp"
        />
</LinearLayout>