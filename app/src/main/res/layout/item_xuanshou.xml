<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:id="@+id/ll_bg"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <TextView
        android:id="@+id/txt_catalog"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="#EFEFEF"
        android:paddingBottom="5dp"
        android:paddingLeft="12dp"
        android:paddingTop="5dp"
        android:visibility="gone"
        android:text="A"
        />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        >
        <ImageView
            android:id="@+id/user_head"
            android:layout_width="@dimen/wlf_45dp"
            android:layout_height="@dimen/wlf_45dp"
            android:layout_marginBottom="@dimen/man_18dp"
            android:layout_marginLeft="@dimen/wlf_16dp"
            android:layout_marginTop="@dimen/man_18dp"
            android:src="@drawable/wlf_deimg" />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/user_head"
        android:layout_marginLeft="@dimen/px_33"
        android:layout_centerVertical="true"
        >
        <TextView
            android:id="@+id/txt_user_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/px_45"
            android:textColor="@color/rgb_444444"
            android:text=" -- "
            />

        <TextView
            android:id="@+id/tv_addstate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txt_user_name"
            android:textSize="@dimen/px_36"
            android:textColor="@color/rgb_888888"
            android:text=" -- "
             />
    </RelativeLayout>
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="3dp"
            android:background="#EFEFEF"
            android:layout_below="@+id/user_head"
            android:layout_alignLeft="@+id/user_head"
            />
        <TextView
            android:id="@+id/txt_user_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1"
            android:textColor="#336598"
            android:visibility="gone" />
    </RelativeLayout>
</LinearLayout>