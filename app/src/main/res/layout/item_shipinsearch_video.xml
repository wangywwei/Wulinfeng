<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ll_item"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical">

        <TextView
            android:layout_marginTop="@dimen/wlf_5dp"
            android:layout_marginBottom="@dimen/wlf_5dp"
            android:id="@+id/tv_userName2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:text="0天前"
            android:textColor="@color/rgb_222222"
            android:textSize="17sp"
            android:visibility="visible" />

        <RelativeLayout
            android:paddingTop="5dp"
            android:layout_marginTop="@dimen/wlf_5dp"
            android:id="@+id/rlyt_video_bg"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:src="@drawable/wlf_deimg"
                android:id="@+id/iv_video_bg"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:scaleType="fitXY" />
                <ImageView
                    android:id="@+id/iv_start"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:background="@drawable/video_icon" />
        </RelativeLayout>


            <TextView
                android:paddingBottom="@dimen/px_45"
                android:paddingRight="5dp"
                android:paddingTop="@dimen/px_45"
                android:id="@+id/tv_userName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="10dp"
                android:text="0天前"
                android:textColor="@color/rgb_444444"
                android:textSize="14sp"
                android:visibility="visible" />

        <View
            android:layout_width="match_parent"
            android:layout_height="12px"
            android:background="@color/list_back"/>

</LinearLayout>