<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/list_back"
    android:orientation="vertical"
    tools:context="com.hxwl.wulinfeng.activity.PlayDetailsActivity">
    <!--android:fitsSystemWindows="true"-->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.hxwl.common.swiperefresh.CommonSwipeRefreshLayout
            android:id="@+id/common_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            >
        <com.hxwl.wulinfeng.view.ScrollViewX
            android:id="@+id/rv_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <RelativeLayout
                    android:id="@+id/rl_layout"
                    android:layout_width="match_parent"
                    android:layout_height="220dp"
                    android:background="@drawable/backgrougimg">

                    <ImageView
                        android:id="@+id/iv_usericon"
                        android:layout_width="65dp"
                        android:layout_height="65dp"
                        android:layout_centerInParent="true"
                        android:background="@drawable/touxiang_img"
                        android:scaleType="centerCrop" />

                    <TextView
                        android:id="@+id/player_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/iv_usericon"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="3dp"
                        android:text=" -- "
                        android:textColor="#ffffff"
                        android:textSize="16sp" />
                    <ImageView
                        android:src="@drawable/guanzhu1"
                        android:id="@+id/guanzhu"
                        android:gravity="center"
                        android:layout_marginBottom="@dimen/wlf_10dp"
                        android:layout_alignParentBottom="true"
                        android:layout_centerHorizontal="true"
                        android:layout_width="@dimen/wlf_48dp"
                        android:layout_height="@dimen/man_28dp" />
                </RelativeLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    >
                    <RelativeLayout
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_marginLeft="10dp"
                        android:layout_height="wrap_content"
                        android:padding="5dp"
                        >
                        <TextView
                            android:id="@+id/tv_guoji"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="国籍"
                            android:textSize="@dimen/px_45"
                            android:textColor="#202020"
                            android:layout_centerVertical="true"
                            />
                        <ImageView
                            android:id="@+id/iv_guoqi"
                            android:layout_width="@dimen/px_56"
                            android:layout_height="@dimen/px_35"
                            android:layout_toRightOf="@+id/tv_guoji"
                            android:layout_marginLeft="10dp"
                            android:layout_centerVertical="true"
                            />
                        <TextView
                            android:id="@+id/tv_guojitext"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:text="--"
                            android:layout_toRightOf="@+id/iv_guoqi"
                            android:textSize="@dimen/px_39"
                            android:textColor="@color/text_color"
                            android:layout_centerVertical="true"
                            />
                    </RelativeLayout>
                    <RelativeLayout
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:padding="5dp"
                        >
                        <TextView
                            android:id="@+id/tv_shengao"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="身高"
                            android:textSize="@dimen/px_45"
                            android:textColor="#202020"
                            android:layout_centerVertical="true"
                            />
                        <TextView
                            android:id="@+id/tv_shengaotext"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:text="--"
                            android:layout_toRightOf="@+id/tv_shengao"
                            android:textSize="@dimen/px_39"
                            android:textColor="@color/text_color"
                            android:layout_centerVertical="true"
                            />

                    </RelativeLayout>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    >
                    <RelativeLayout
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_marginLeft="10dp"
                        android:layout_height="wrap_content"
                        android:padding="5dp"
                        >
                        <TextView
                            android:id="@+id/tv_nianling"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="年龄"
                            android:textSize="@dimen/px_45"
                            android:textColor="#202020"
                            android:layout_centerVertical="true"
                            />
                        <TextView
                            android:id="@+id/tv_nianlingtv"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:layout_toRightOf="@+id/tv_nianling"
                            android:textSize="@dimen/px_39"
                            android:textColor="@color/text_color"
                            android:layout_centerVertical="true"
                            />
                    </RelativeLayout>
                    <RelativeLayout
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:padding="5dp"
                        >
                        <TextView
                            android:id="@+id/tv_jibie"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="级别"
                            android:textSize="@dimen/px_45"
                            android:textColor="#202020"
                            android:layout_centerVertical="true"
                            />
                        <TextView
                            android:singleLine="true"
                            android:id="@+id/tv_jibietext"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:layout_toRightOf="@+id/tv_jibie"
                            android:textSize="@dimen/px_39"
                            android:textColor="@color/text_color"
                            android:layout_centerVertical="true"
                            />

                    </RelativeLayout>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    >
                    <RelativeLayout
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_marginLeft="10dp"
                        android:layout_height="wrap_content"
                        android:padding="5dp"
                        >
                        <TextView
                            android:id="@+id/tv_tizhong"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="体重"
                            android:textSize="@dimen/px_45"
                            android:textColor="#202020"
                            android:layout_centerVertical="true"
                            />
                        <TextView
                            android:id="@+id/tv_tizhongtext"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:text="--"
                            android:layout_toRightOf="@+id/tv_tizhong"
                            android:textSize="@dimen/px_39"
                            android:textColor="@color/text_color"
                            android:layout_centerVertical="true"
                            />
                    </RelativeLayout>
                    <RelativeLayout
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:padding="5dp"
                        >
                        <TextView
                            android:id="@+id/tv_julebu"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="俱乐部"
                            android:textSize="@dimen/px_45"
                            android:textColor="#202020"
                            android:layout_centerVertical="true"
                            />
                        <TextView
                            android:id="@+id/tv_julebutext"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:text="--"
                            android:singleLine="true"
                            android:layout_toRightOf="@+id/tv_julebu"
                            android:textSize="@dimen/px_39"
                            android:textColor="@color/text_color"
                            android:layout_centerVertical="true"
                            />
                    </RelativeLayout>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="5dp"
                    android:layout_marginLeft="10dp"
                    >
                    <TextView
                        android:id="@+id/tv_jianjie"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="简介"
                        android:textSize="@dimen/px_45"
                        android:textColor="#202020"
                        />
                    <RelativeLayout
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:layout_toRightOf="@+id/tv_jianjie"
                        >
                        <com.hxwl.wulinfeng.view.ExpandableTextView
                            android:id="@+id/tv_jianjietext"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:layout_marginRight="10dp"
                            android:textSize="@dimen/px_39"
                            android:textColor="@color/text_color"
                            app:etv_ToExpandHintColor="@color/shouye_tab"
                            app:etv_ToShrinkHintColor="@color/shouye_tab"
                            />
                        <!--<TextView-->
                            <!--android:id="@+id/tv_jianjietext2"-->
                            <!--android:layout_width="wrap_content"-->
                            <!--android:layout_height="wrap_content"-->
                            <!--android:layout_marginLeft="10dp"-->
                            <!--android:textSize="@dimen/textSize_little_16sp"-->
                            <!--android:textColor="@color/text_color"-->
                            <!--/>-->

                    </RelativeLayout>
                     <!--<TextView-->
                        <!--android:id="@+id/tv_zhankai"-->
                        <!--android:layout_width="wrap_content"-->
                        <!--android:layout_height="wrap_content"-->
                        <!--android:layout_marginLeft="5dp"-->
                        <!--android:text="【展开】"-->
                        <!--android:layout_toRightOf="@+id/tv_jianjietext"-->
                        <!--android:textSize="@dimen/textSize_little_16sp"-->
                        <!--android:textColor="@color/red"-->
                         <!--android:visibility="invisible"-->
                        <!--android:layout_alignParentRight="true"-->
                        <!--android:layout_centerVertical="true"-->
                        <!--/>-->

                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="5dp"
                    android:background="@color/ac_color_bg"
                    android:orientation="vertical">
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="10dp"
                        android:background="@color/list_back"
                        />
                    <RelativeLayout
                        android:id="@+id/bisai_data"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:visibility="visible">

                        <include layout="@layout/competition_data" />
                    </RelativeLayout>
                </LinearLayout>
            </LinearLayout>

            </com.hxwl.wulinfeng.view.ScrollViewX>
        </com.hxwl.common.swiperefresh.CommonSwipeRefreshLayout>

        <RelativeLayout
            android:id="@+id/title_back"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            >

            <ImageView
                android:id="@+id/btn_back"
                android:layout_width="40dp"
                android:layout_height="match_parent"
                android:scaleType="center"
                android:layout_centerVertical="true"
                android:src="@drawable/backup_icon"
                />
            <TextView
                android:id="@+id/tv_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="播求 -- 一龙"
                android:layout_centerInParent="true"
                android:textColor="@color/white"
                android:visibility="gone"
                />
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_margin="10dp"
                android:layout_centerVertical="true"
                android:visibility="gone"
                android:background="@drawable/share_icon" />
        </RelativeLayout>
    </RelativeLayout>

</LinearLayout>
