<?xml version="1.0" encoding="utf-8"?>
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="vertical"
        android:id="@+id/ll_bg"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            >
                <RelativeLayout
                    android:id="@+id/rl"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin = "5dp"
                    android:gravity="center_vertical"
                    >
                    <TextView
                        android:id="@+id/tv_flag"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="【系统消息】"
                        android:textColor="@color/black"
                        android:textSize="@dimen/px_48" />

                    <TextView
                        android:id="@+id/tv_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_toRightOf="@+id/tv_flag"
                        android:textColor="@color/black"
                        android:textSize="@dimen/px_48"
                        android:text=" -- "
                        android:singleLine="true"
                        />
                </RelativeLayout>
                <RelativeLayout
                    android:id="@+id/rl2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin = "5dp"
                    android:layout_below="@+id/rl"
                    android:layout_centerVertical="true"
                    android:background="@color/list_back"
                    >
                    <TextView
                        android:id="@+id/tv_msg"
                        android:padding="10dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text=" -- "
                        android:textColor="@color/text_col"
                        android:textSize="@dimen/px_42" />
                <ImageView
                    android:id="@+id/iv_img"
                    android:layout_width="@dimen/px_960"
                    android:layout_height="@dimen/px_300"
                    android:layout_below="@+id/tv_msg"
                    android:layout_margin="10dp"
                    android:src="@drawable/wlf_deimg"
                    android:scaleType="centerCrop"
                    />
                </RelativeLayout>
            <TextView
                android:id="@+id/tv_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:text="10分钟前"
                android:layout_below="@+id/rl2"
                android:padding="10dp"
                />
            <TextView
                android:id="@+id/tv_jump2det"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:text="查看详情 >>"
                android:layout_below="@+id/rl2"
                android:padding="10dp"
                />

            </RelativeLayout>
    </LinearLayout>