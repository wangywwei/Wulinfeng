<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:id="@+id/ll_bg"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <TextView
        android:id="@+id/txt_catalog"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="#EFEFEF"
        android:paddingBottom="5dp"
        android:paddingLeft="12dp"
        android:paddingTop="5dp"
        android:visibility="gone"
        android:text="A"
        />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        >

        <ImageView
            android:id="@+id/user_head"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginBottom="6dp"
            android:layout_marginLeft="12dp"
            android:layout_marginTop="6dp"
            android:src="@drawable/wlf_deimg" />
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/user_head"
            android:layout_marginLeft="@dimen/px_33"
            android:layout_centerVertical="true"
            >
            <TextView
                android:id="@+id/txt_user_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/px_45"
                android:textColor="#202020"
                android:text=" -- "
                />
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/txt_user_name"
                android:gravity="center_vertical"
                >
                <ImageView
                    android:id="@+id/iv_guoqi"
                    android:layout_width="@dimen/px_56"
                    android:layout_height="@dimen/px_35"
                    android:layout_alignBottom="@+id/tv_addstate"
                    android:visibility="gone"
                    android:layout_centerVertical="true"
                    />
                <TextView
                    android:id="@+id/tv_addstate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/px_36"
                    android:layout_toRightOf="@+id/iv_guoqi"
                    android:layout_marginLeft="3dp"
                    android:layout_centerVertical="true"
                    android:textColor="#8C8C8C"
                    android:text=" -- "
                    />
            </RelativeLayout>

        </RelativeLayout>
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="3dp"
            android:background="#EFEFEF"
            android:layout_below="@+id/user_head"
            android:layout_alignLeft="@+id/user_head"
            />
        <TextView
            android:id="@+id/txt_user_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1"
            android:textColor="#336598"
            android:visibility="gone" />
    </RelativeLayout>
</LinearLayout>